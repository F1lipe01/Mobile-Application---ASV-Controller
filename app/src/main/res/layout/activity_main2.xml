<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/our_blue"
    tools:context=".MainActivity2">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout_2"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/linearLayout3"
            android:layout_width="363dp"
            android:layout_height="145dp"
            android:layout_marginTop="164dp"
            android:orientation="horizontal"
            app:layout_constraintBottom_toTopOf="@+id/linearLayout4"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageButton
                android:id="@+id/freeControl"
                android:layout_width="102dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="#219EBC"
                android:contentDescription="remote"
                app:srcCompat="@drawable/remote" />

            <ImageButton
                android:id="@+id/telemetryButton"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="#219EBC"
                android:contentDescription="telemetry"
                app:srcCompat="@drawable/telemetry" />

        </LinearLayout>

        <TextView
            android:id="@+id/textView3"
            android:layout_width="107dp"
            android:layout_height="23dp"
            android:layout_alignWithParentIfMissing="true"
            android:fontFamily="@font/opensansbold"
            android:layoutDirection="ltr"
            android:text="Remote Control"
            android:textAlignment="center"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.174"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.205" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignWithParentIfMissing="true"
            android:fontFamily="@font/opensansbold"
            android:layoutDirection="ltr"
            android:text="Telemetry Display"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.823"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.202" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:fontFamily="serif"
            android:layoutDirection="ltr"
            android:text="Emergency Actions"
            android:textAlignment="center"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.82" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="66dp"
            android:layout_height="wrap_content"
            android:layout_alignWithParentIfMissing="true"
            android:fontFamily="@font/opensansbold"
            android:layoutDirection="ltr"
            android:text="Settings"
            android:textAlignment="center"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.6"
            app:layout_constraintStart_toEndOf="@+id/textView5"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.669" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="58dp"
            android:layout_height="18dp"
            android:layout_alignWithParentIfMissing="true"
            android:fontFamily="@font/opensansbold"
            android:layoutDirection="ltr"
            android:text="Camera"
            android:textAlignment="center"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.246"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.67" />

        <Button
            android:id="@+id/stopButton"
            android:layout_width="139dp"
            android:layout_height="55dp"
            android:backgroundTint="#D8625E"
            android:fontFamily="@font/opensansbold"
            android:text="Stop Vehicle"
            android:textColor="#000000"
            android:textSize="10sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.194"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.924" />

        <Button
            android:id="@+id/locateButton"
            android:layout_width="139dp"
            android:layout_height="55dp"
            android:backgroundTint="#D8625E"
            android:fontFamily="@font/opensansbold"
            android:text="Locate Vehicle"
            android:textColor="#000000"
            android:textSize="10sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.805"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.924" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_alignWithParentIfMissing="true"
            android:fontFamily="serif"
            android:layoutDirection="ltr"
            android:text="MENU"
            android:textAlignment="center"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.08" />

        <LinearLayout
            android:id="@+id/linearLayout4"
            android:layout_width="366dp"
            android:layout_height="165dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.533"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.548">

            <ImageButton
                android:id="@+id/cameraButton"
                android:layout_width="198dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="#219EBC"
                android:contentDescription="camera"
                android:contextClickable="false"
                app:srcCompat="@drawable/image" />

            <ImageButton
                android:id="@+id/settingsButton"
                android:layout_width="204dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="#219EBC"
                android:contentDescription="setting"
                app:srcCompat="@drawable/settings" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/waiting_net_2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible">

        <TextView
            android:id="@+id/waiting_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="serif"
            android:text="@string/no_internet_connection_en"
            android:textColor="@color/black"
            android:textSize="23sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.492"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.604" />

        <pl.droidsonroids.gif.GifImageView
            android:id="@+id/no_signal_gif2"
            android:layout_width="198dp"
            android:layout_height="183dp"
            android:src="@drawable/wifi_signal"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.401" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</RelativeLayout>

