<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/our_blue"
    tools:context=".MainActivity3">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textView"
            android:layout_width="296dp"
            android:layout_height="40dp"
            android:layout_alignWithParentIfMissing="true"
            android:fontFamily="serif"
            android:layoutDirection="ltr"
            android:text="REMOTE CONTROL"
            android:textAlignment="center"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.08" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="163dp"
            android:layout_height="24dp"
            android:layout_alignWithParentIfMissing="true"
            android:fontFamily="@font/opensansbold"
            android:layoutDirection="ltr"
            android:text="Free Control"
            android:textAlignment="center"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.236" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="163dp"
            android:layout_height="24dp"
            android:layout_alignWithParentIfMissing="true"
            android:fontFamily="@font/opensansbold"
            android:layoutDirection="ltr"
            android:text="Challenges/Tasks"
            android:textAlignment="center"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.593" />

        <LinearLayout
            android:id="@+id/linearLayout5"
            android:layout_width="274dp"
            android:layout_height="202dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.532"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.815">

            <ImageButton
                android:id="@+id/taskControl"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="#219EBC"
                android:contentDescription="task"
                app:srcCompat="@drawable/task" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="274dp"
            android:layout_height="202dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toTopOf="@+id/linearLayout5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.518"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.744">

            <ImageButton
                android:id="@+id/freeControl"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="#219EBC"
                android:contentDescription="free"
                app:srcCompat="@drawable/free" />

        </LinearLayout>

        <ImageButton
            android:id="@+id/backButton"
            android:layout_width="65dp"
            android:layout_height="58dp"
            android:layout_marginStart="4dp"
            android:backgroundTint="@color/our_blue"
            android:contentDescription="back"
            android:textAlignment="viewStart"
            app:layout_constraintStart_toStartOf="@id/backButton"
            app:layout_constraintTop_toTopOf="@id/backButton"
            app:srcCompat="@drawable/back" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</RelativeLayout>